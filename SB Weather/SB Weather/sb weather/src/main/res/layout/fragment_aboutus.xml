<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity"

    android:background="@drawable/background_horizon">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/aboutUslogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="monospace"
            android:text="@string/aboutUs"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="55sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/aboutUs"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.456"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />

        <TextView
            android:id="@+id/aboutUs"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_marginStart="30dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="@string/aboutPage"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.234" />

        <ImageView
            android:id="@+id/EmailImage"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:contentDescription="@string/app_name"
            android:src="@android:drawable/ic_dialog_email"
            android:gravity="center"
            android:layout_marginStart="166dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/forquestions"
            app:tint="#000000" />

        <TextView
            android:id="@+id/forquestions"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:fontFamily="monospace"
            android:text="@string/questions"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="70dp"
            app:layout_constraintBottom_toTopOf="@+id/EmailImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aboutUs" />

        <TextView
            android:id="@+id/EmailAddress"
            android:layout_width="275dp"
            android:layout_height="30dp"
            android:fontFamily="monospace"
            android:layout_marginStart="60dp"
            android:text="@string/eMail"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EmailImage"
            app:layout_constraintVertical_bias="0.028" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>